{
  "compilerOptions": {
    "outDir": "lib/",
    "sourceMap": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",

    "target": "es5",
        "lib": [
            "es5",
            "es6",
            "es2015",
            "dom"
        ],
    
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "rootDir": "."
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}
